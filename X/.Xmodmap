!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! show current map: xmodmap -pke
! reload xmodmap: xmodmap ~/.Xmodmap
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

! Map umlauts to Alt_R
keycode 108 = Mode_switch

! umlauts and some special chars
keysym a = a A adiaeresis Adiaeresis
keysym o = o O odiaeresis Odiaeresis
keysym u = u U udiaeresis Udiaeresis

keysym c = c C ccedilla U2184
keysym d = d D Greek_alpha Greek_DELTA
keysym e = e E U01DD U018E
keysym m = m M Greek_mu
keysym n = n N Greek_ETA
keysym p = p P Greek_rho Greek_pi
keysym r = r R registered Greek_OMEGA
keysym s = s S ssharp
keysym k = k K U26B7
keysym v = v V U03D1
keysym y = y Y Greek_UPSILON

keycode 21 = equal plus plusminus plus

! digits
keycode  10 = 1 exclam 		U2610
keycode  11 = 2 at			U2611
keycode  12 = 3 numbersign 	3 		numbersign
keycode  13 = 4 dollar 		4 		dollar
keycode  14 = 5 percent 	EuroSign
keycode  15 = 6 asciicircum 6 		asciicircum
keycode  16 = 7 ampersand 	7 		ampersand
keycode  17 = 8 asterisk 	infinity
keycode  18 = 9 parenleft 	9 		parenleft
keycode  19 = 0 parenright 	degree

! who needs CapsLock anyway
clear Lock
keycode 66 = Escape
